<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
    <name>MOD_YOUTUBE_SINGLE</name>
    <author>BKWSU</author>
    <creationDate>November 2025</creationDate>
    <copyright>Copyright (C) 2025 BKWSU. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.2.11</version>
    <description>MOD_YOUTUBE_SINGLE_XML_DESCRIPTION</description>
    
    <namespace path="src">BKWSU\Module\YoutubeSingle</namespace>
    
    <files>
        <filename module="mod_youtube_single">mod_youtube_single.php</filename>
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>
    
    <media destination="mod_youtube_single" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="video_source"
                    type="radio"
                    label="MOD_YOUTUBE_SINGLE_FIELD_VIDEO_SOURCE_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_VIDEO_SOURCE_DESC"
                    class="btn-group"
                    default="module"
                >
                    <option value="module">MOD_YOUTUBE_SINGLE_VIDEO_SOURCE_MODULE</option>
                    <option value="menu">MOD_YOUTUBE_SINGLE_VIDEO_SOURCE_MENU</option>
                </field>
                
                <field
                    name="video_id"
                    type="youtubevideo"
                    label="MOD_YOUTUBE_SINGLE_FIELD_VIDEO_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_VIDEO_DESC"
                    showon="video_source:module"
                />
                
                <field
                    name="menu_param_name"
                    type="text"
                    label="MOD_YOUTUBE_SINGLE_FIELD_MENU_PARAM_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_MENU_PARAM_DESC"
                    default="youtube_video_id"
                    hint="youtube_video_id or youtube-video-id"
                    showon="video_source:menu"
                />
                
                <field
                    name="display_mode"
                    type="list"
                    label="MOD_YOUTUBE_SINGLE_FIELD_DISPLAY_MODE_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_DISPLAY_MODE_DESC"
                    default="embed"
                >
                    <option value="embed">MOD_YOUTUBE_SINGLE_DISPLAY_MODE_EMBED</option>
                    <option value="card">MOD_YOUTUBE_SINGLE_DISPLAY_MODE_CARD</option>
                    <option value="thumbnail">MOD_YOUTUBE_SINGLE_DISPLAY_MODE_THUMBNAIL</option>
                </field>
                
                <field
                    name="thumbnail_quality"
                    type="list"
                    label="MOD_YOUTUBE_SINGLE_FIELD_THUMBNAIL_QUALITY_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_THUMBNAIL_QUALITY_DESC"
                    default="hqdefault"
                    showon="display_mode:card,thumbnail"
                >
                    <option value="default">MOD_YOUTUBE_SINGLE_THUMBNAIL_QUALITY_DEFAULT</option>
                    <option value="mqdefault">MOD_YOUTUBE_SINGLE_THUMBNAIL_QUALITY_MEDIUM</option>
                    <option value="hqdefault">MOD_YOUTUBE_SINGLE_THUMBNAIL_QUALITY_HIGH</option>
                    <option value="sddefault">MOD_YOUTUBE_SINGLE_THUMBNAIL_QUALITY_STANDARD</option>
                    <option value="maxresdefault">MOD_YOUTUBE_SINGLE_THUMBNAIL_QUALITY_MAXRES</option>
                </field>
                
                <field
                    name="show_play_button"
                    type="radio"
                    label="MOD_YOUTUBE_SINGLE_FIELD_SHOW_PLAY_BUTTON_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_SHOW_PLAY_BUTTON_DESC"
                    class="btn-group btn-group-yesno"
                    default="1"
                    showon="display_mode:card,thumbnail"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <field
                    name="player_width"
                    type="text"
                    label="MOD_YOUTUBE_SINGLE_FIELD_PLAYER_WIDTH_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_PLAYER_WIDTH_DESC"
                    default="100%"
                    showon="display_mode:embed"
                />
                
                <field
                    name="player_height"
                    type="text"
                    label="MOD_YOUTUBE_SINGLE_FIELD_PLAYER_HEIGHT_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_PLAYER_HEIGHT_DESC"
                    default="315"
                    showon="display_mode:embed"
                />
                
                <field
                    name="autoplay"
                    type="radio"
                    label="MOD_YOUTUBE_SINGLE_FIELD_AUTOPLAY_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_AUTOPLAY_DESC"
                    class="btn-group btn-group-yesno"
                    default="0"
                    showon="display_mode:embed"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <field
                    name="custom_params"
                    type="text"
                    label="MOD_YOUTUBE_SINGLE_FIELD_CUSTOM_PARAMS_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_CUSTOM_PARAMS_DESC"
                    hint="controls=0&amp;fs=0"
                    showon="display_mode:embed"
                />
                
                <field
                    name="show_video_title"
                    type="radio"
                    label="MOD_YOUTUBE_SINGLE_FIELD_SHOW_TITLE_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_SHOW_TITLE_DESC"
                    class="btn-group btn-group-yesno"
                    default="1"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <field
                    name="title_position"
                    type="list"
                    label="MOD_YOUTUBE_SINGLE_FIELD_TITLE_POSITION_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_TITLE_POSITION_DESC"
                    default="above"
                    showon="show_video_title:1"
                >
                    <option value="above">MOD_YOUTUBE_SINGLE_TITLE_POSITION_ABOVE</option>
                    <option value="below">MOD_YOUTUBE_SINGLE_TITLE_POSITION_BELOW</option>
                </field>
                
                <field
                    name="show_description"
                    type="radio"
                    label="MOD_YOUTUBE_SINGLE_FIELD_SHOW_DESCRIPTION_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_SHOW_DESCRIPTION_DESC"
                    class="btn-group btn-group-yesno"
                    default="0"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <field
                    name="description_limit"
                    type="number"
                    label="MOD_YOUTUBE_SINGLE_FIELD_DESCRIPTION_LIMIT_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_DESCRIPTION_LIMIT_DESC"
                    default="200"
                    min="50"
                    max="1000"
                    showon="show_description:1"
                />
                
                <field
                    name="show_link"
                    type="radio"
                    label="MOD_YOUTUBE_SINGLE_FIELD_SHOW_LINK_LABEL"
                    description="MOD_YOUTUBE_SINGLE_FIELD_SHOW_LINK_DESC"
                    class="btn-group btn-group-yesno"
                    default="1"
                    showon="display_mode!:embed"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            
            <fieldset name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC"
                />
                
                <field
                    name="moduleclass_sfx"
                    type="textarea"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
                    rows="3"
                />
                
                <field
                    name="cache"
                    type="list"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC"
                    default="1"
                >
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                
                <field
                    name="cache_time"
                    type="number"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                    default="900"
                />
                
                <field
                    name="cachemode"
                    type="hidden"
                    default="itemid"
                >
                    <option value="itemid"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
